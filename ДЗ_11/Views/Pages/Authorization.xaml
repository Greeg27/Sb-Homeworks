<Page x:Class="ДЗ_11.Views.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ДЗ_11.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="160*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="login:" Margin="10" FontSize="18"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="password:" Margin="10" FontSize="18"/>
        <TextBox x:Name="login" Grid.Row="1" Grid.Column="2" Margin="10" FontSize="18" Padding="5,0,0,5"/>
        <TextBox x:Name="password" Grid.Row="2" Grid.Column="2" Margin="10" FontSize="18" Padding="5,0,0,5"/>

    </Grid>
</Page>
